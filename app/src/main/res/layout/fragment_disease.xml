<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiseaseFragment"
    android:layout_marginTop="55dp"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/bacterialBlightCV"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_yellow"
        app:cardElevation="10dp"
        app:contentPadding="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/bacterial_blight"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/click_for_more_info"
                android:textSize="15sp"
                android:textColor="@color/dark_green"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/brownStreakCV"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_yellow"
        app:cardElevation="10dp"
        app:contentPadding="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/brown_streak"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/click_for_more_info"
                android:textSize="15sp"
                android:textColor="@color/dark_green"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/greenMiteCV"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_yellow"
        app:cardElevation="10dp"
        app:contentPadding="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/green_mite"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/click_for_more_info"
                android:textSize="15sp"
                android:textColor="@color/dark_green"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mosaicDiseaseCV"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_yellow"
        app:cardElevation="10dp"
        app:contentPadding="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/mosaic_disease"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/click_for_more_info"
                android:textSize="15sp"
                android:textColor="@color/dark_green"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>